<h1>Update Avatar</h1>

<%= form_tag '/avatars/#{@avatar['id']', method: :patch do %>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @avatar["image"] %>
  </div>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :lname, @avatar["name"] %>
  </div>
  <%= submit_tag "Update Avatar" %>
<% end %>