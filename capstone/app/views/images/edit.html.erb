<h3><%= link_to 'Home', '/images' %> </h3>

<h1>Manage the Graffiti Image Submission</h1>

<%= form_tag "/images/#{@image.id}", method: :patch do %>
  
  <div>
    <%= label_tag :image, "Describe the graffiti: " %>
    <%= text_field_tag :image, @image.image %>
  </div>
  <br>
  <div>
    <%= label_tag :location, "Where's the graffiti located? " %>
    <%= text_field_tag :location, @image.location %>
  </div>
  <br>

  <% if current_user && current_user.admin%>

    <div>
      <%= label_tag :assign_to_gang, "Assign to a gang: " %>
      <%= text_field_tag :assign_to_gang, nil, placeholder: "Gang not yet assigned." %>
    </div>
    <br>
    <div>
      <%= label_tag :status %>
      <%= text_field_tag :status, nil, placeholder: "Status not yet assigned." %>
    </div>
    <br>
    <div>
      <%= label_tag :notes %>
      <%= text_field_tag :notes, nil, placeholder: "notes" %>
    </div>
    <br>
  <% end %>

  <div>
    <%= submit_tag "Update the Info" %>
  </div>
<% end %>