<h1>Manage the Image</h1>

<%= form_tag "/images/#{@image.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @image.name %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @image.image %>
  </div>
  <div>
    <%= label_tag :status %>
    <%= text_field_tag :status, @image.status %>
  </div>
  <div>
    <%= label_tag :notes %>
    <%= text_field_tag :notes, @image.notes %>
  </div>
  <div>
    <%= submit_tag "Update" %>
  </div>
<% end %>