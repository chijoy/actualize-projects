<h1>Create A New Graffiti Grabber Request</h1>

<%= form_tag "/images", method: :post do %>
  <div>
    <%= label_tag :image, "Describe the graffiti: " %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= label_tag :location, "Where's the graffiti located? " %>
    <%= text_field_tag :location %>
  </div>
  <div>
    <%= label_tag  :name %>
    <%= text_field_tag :name, @image.name %>
  </div>
  <div>
    <%= label_tag :notes %>
    <%= text_field_tag :notes, @image.notes %>
  </div>
  <div>
    <%= label_tag :status %>
    <%= text_field_tag :status, @image.status %>
  </div>
  <div>
    <%= submit_tag "Submit Your Graffiti" %>
  </div>
<% end %>