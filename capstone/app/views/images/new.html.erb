<h3><%= link_to 'Home', '/images' %>  </h3>
<h1>Create A New Graffiti Grabber Request</h1>

<%= form_tag "/images", method: :post do %>
  <div>
    <%= label_tag :image, "Describe the graffiti: " %>
    <%= text_field_tag :image %>
  </div>
  <br>
  <div>
    <%= label_tag :location, "Where's the graffiti located? " %>
    <%= text_field_tag :location %>
  </div>
  <br>
  <div>
    <%= label_tag :type_of_surface, "What's the type of surface? " %>
    <%= text_field_tag :type_of_surface %>
  </div>
  <br>
  <div>
    <%= label_tag :surface_location, "Where's the surface located? " %>
    <%= text_field_tag :surface_location %>
  </div>
  <br>
  <div>
    <%= submit_tag "Submit Graffiti" %>
  </div>
<% end %>