<p>Image Here: <%= @image.graffiti_image %></p>
<p>Description of Graffiti:<%= @image.image %></p>
<p>Location: <%= @image.location %></p>
<p>Type of Surface: <% if @image.type_of_surface %> <%= @image.type_of_surface %> <% else %>Not Assigned <% end %></p>
  <p>Surface Location: <% if @image.surface_location %> <%= @image.surface_location %> <% else %>Not Assigned <% end %></p>
  <p>Status: <% if @image.status %> <%= @image.status %> <% else %>Not Assigned<% end %></p>
  <p>Gang Association: <% if @image.assign_to_gang %> <%= @image.assign_to_gang %> <% else %>Not Assigned<% end %></p>
  <p>Latitude: <%= @image.latitude %></p>
  <p>Longitude: <%= @image.longitude %></p>
  <br>
  <p>Created At: <%= @image.pretty_created_at %></p>
  <p>Updated At: <%= @image.pretty_updated_at %></p>
<p>-----------------------------------</p>
<br>
<% if current_user && (@image.user_id == current_user.id) %>
  <p>  <%= link_to 'Edit', "/images/#{@image.id}/edit" %>  |  <%= link_to 'Delete', "/images/#{@image.id}", method: :delete %></p>
<% end %> 

<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Graffiti Grabber</title>
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 80%;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <div id="flag" hidden="true"><%= image_url('Graffiti_Grabber_Icon1.jpg') %></div>
    <script>

      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 18,
          center: {lat: 41.8885, lng: -87.6354},
          streetViewControl: false
        });
        map.setMapTypeId(google.maps.MapTypeId.HYBRID);

        
      }

      var places = [
        ['Merchandise Mart', 41.8885, -87.6354, 4],
        ['Water Tower Place', 41.8971, -87.6244, 5],
        ['Buckingham Fountain', 41.8758, -87.6189, 3],
        ['Art Institute', 41.8796, -87.6237, 2],
        ['Grant Park', 41.8828, 87.6189, 1]
      ];

      function setMarkers(map) {
        
        var image = {
          
          url: document.getElementById('flag').innerHTML,          
          size: new google.maps.Size(20, 30),
          origin: new google.maps.Point(0, 0),
          anchor: new google.maps.Point(0, 30)
        };
      
        var shape = {
          coords: [1, 1, 1, 20, 18, 20, 18, 1],
          type: 'poly'
        };

        var contentString = '<div id="content">'+
                    '<div id="siteNotice">'+
                    '</div>'+
                    '<h1 id="firstHeading" class="firstHeading">Chicago</h1>'+
                    '<div id="bodyContent">'+
                    '<p><b>Chicago</b>, also referred to as <b>The Second City</b>, is a large ' +
                    'city in Illinois. </p>'+
            
                    '</div>'+
                    '</div>';

        var infowindow = new google.maps.InfoWindow({
          content: contentString
        });
        for (var i = 0; i < places.length; i++) {
          var place = places[i];
          var marker = new google.maps.Marker({
            position: {lat: place[1], lng: place[2]},
            map: map,
            icon: image,
            shape: shape,
            title: place[0],
            
          });
          marker.addListener('click', function() {
            infowindow.open(map, marker);
          });
        }
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBRpgQN5D9dI_8AnHd9QKFwMO5qKV1AUmk&callback=initMap">

    </script>

  </body>

</html>
