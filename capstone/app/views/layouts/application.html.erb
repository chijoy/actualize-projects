            <div class="form-group">
              <%= text_field_tag :search_term, nil, placeholder: "Search", class: "form-control" %>
            </div>
            <%= submit_tag 'Search', class: "btn btn-danger" %>
          <% end %>


          <ul class="nav navbar-nav navbar-right">
            
            <li class="dropdown">
