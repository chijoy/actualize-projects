<!DOCTYPE html>
<html>
  <head>
    <title>Graffiti Grabber</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- <link href="css/vitality-blue.css" rel="stylesheet" type="text/css"> -->

    <!-- <script type="text/javascript" src="js/jquery.js"></script></script> -->

  </head>

  <body class="modern">
  
  <header id="my-gd-header">
  <div id="gd-container">
    
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">GG</a>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            
            <% if current_user %>
              <li><%= link_to 'Log Out', '/logout', method: :delete %></li>
            <% else %>
              <li><a href="/signup">Sign Up</a></li>
              <li><a href="/login">Log In</a></li>
            <% end %> 


            <% if current_user %>
              <li><%= link_to 'Submit A Graffiti Clean Up Request', '/images/new' %></li>
            <% else %>
              <li><h4>Sign up to submit graffiti cleanup requests!</h4></li>
            <% end %> 
                        
          </ul>

          <%= form_tag '/images', method: :get, class: "navbar-form navbar-right"  do %>
            <div class="form-group">
              <%= text_field_tag :search_term, nil, placeholder: "Search", class: "form-control" %>
            </div>
            <%= submit_tag 'Search', class: "btn btn-danger" %>
          <% end %>

          <ul class="nav navbar-nav navbar-right">
            
            
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 90%;
        *, *:before, *:after {
                -moz-box-sizing: content-box!important;
                -webkit-transform: none !important;
                box-sizing: content-box !important;
            }
            img {
                max-width: none;
                max-height: none !important;
                height: auto;
            }
            label {
                width: auto;
                display: inline;
            }
      }
    </style>
     
    </script>

  </header>
 
    <%= yield %>
  </body>
</html>

